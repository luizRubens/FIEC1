package progressao;

import javax.swing.JOptionPane;

public class Ex1 {

	public static void main(String[] args) {
		double dolar;
		double reais;
		double cotacao;

		dolar = Double.parseDouble((JOptionPane.showInputDialog("Digite o valor do produto em dolares"));
		cotacao = Double.parseDouble(JOptionPane.showInputDialog("Forneça a cotação do dolar"));
		reais = dolar*cotacao;

		System.out.println("O valor do produto em dolares é: "+dolar+", R$ "+reais+" é o valor em reais");

	}

}
